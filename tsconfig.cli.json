{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist/cli",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/cli/**/*",
    "src/framework/**/*",
    "src/simulations/**/*",
    "src/test/**/*"
  ],
  "exclude": [
    "src/ui/**/*",
    "src/main.tsx",
    "dist",
    "node_modules"
  ]
}